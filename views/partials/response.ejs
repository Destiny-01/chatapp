<link href="/stylesheets/toastr.min.css" rel="stylesheet" />
<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/toastr.min.js"></script>

<% if (error.length>0) { %>
  <script>
    toastr.error('<%= error %>')
  </script>
<% } %>

<% if (success.length>0) { %>
  <script>
    toastr.success('<%= success %>')
  </script>
<% } %>
   

<script>
   toastr.options = {
    closeButton: true,
    progressBar: false,
    positionClass: "toast-top-full-width",
    preventDuplicates: true,
    showDuration: "300",
    hideDuration: "1000",
    timeOut: "5000",
    extendedTimeOut: "1000",
    showEasing: "swing",
    hideEasing: "linear",
    showMethod: "fadeIn",
    hideMethod: "fadeOut",
  };
</script>